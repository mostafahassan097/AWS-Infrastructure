pipeline {
  agent {label '!private_slave'}
    tools {
       terraform 'terraform'
    }
  
    stages {
         stage('terraform destroy')
         {
           steps{
              withAWS(credentials: 'aws-creds', region: 'eu-west-1') {
                 sh 'terraform -chdir="./Terraform" destroy --var-file=prod.tfvars'
                 }
           }
        }

    }     
}